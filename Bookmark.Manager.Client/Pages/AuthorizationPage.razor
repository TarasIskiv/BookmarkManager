@attribute [AllowAnonymous]
@page "/authorization"

<div style="width:100%; height: 90vh">
    <MudStack Style="width:100%;height:100%" AlignItems="AlignItems.Center" Justify="Justify.Center">
        @if(IsInLoginState)
        {
            <LoginComponent UserChanged="Login"></LoginComponent>
        }
        else
        {
            <SignUpComponent UserChanged="SignUp"></SignUpComponent>
            
        }
        <br/>
        <MudButton OnClick="(() => IsInLoginState = !IsInLoginState)">@GetHelperText()</MudButton>
    </MudStack>
</div>
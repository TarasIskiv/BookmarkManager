@page "/"
@page "/home"
@attribute [Authorize]

<BreadcrumbComponent CurrentFolder="CurrentFolder" UnavailableFolderAppeared="@NavigateToHome"></BreadcrumbComponent>

<FolderComponent Folders="@Folders" FoldersRefreshed="@LoadPageData" FolderNavigated="@MoveToSelectedFolder" IsRemovingDisabled="IsRemovingDisabled" CurrentFolderId="ParentFolderId"
                 FolderRemoved="@NavigateToParent"></FolderComponent>
@if(ParentFolderId is not null)
{
    <BookmarkComponent Bookmarks="Bookmarks" CurrentFolderId="ParentFolderId.Value" BookmarksChanged="LoadPageData"></BookmarkComponent>
}

@if (Folders.Count() > 0)
{
    <MudStack Row="true" Justify="Justify.SpaceBetween" Style="width:100%">
        <MudText Typo="Typo.h5">Folders</MudText>
        <div>
            <MudButton Variant="Variant.Filled" Disabled="IsRemovingDisabled" Color="Color.Error" OnClick="@RemoveFolder">Remove Current Folder</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@AddNewFolder">Add Folder</MudButton>
        </div>
    </MudStack>
    <hr />
    <br />
    <div id="unique_id_scroll_section" class="ma-0" style="height:30vh;overflow: auto;">
        <MudPaper Outlined="false" Elevation="0" Style="background:transparent">
            <MudStack Style="height:100%; width:100%">
                @foreach (var folder in Folders)
                {
                    <MudStack Style="width:100%;height:100%" Row="true" Justify="Justify.SpaceBetween">
                        <MudPaper Class="mud-theme-primary" Height="5vh" Width="100%" Style="padding: 0 1em">
                            <MudText Color="Color.Info" Typo="Typo.h6">@folder.Name</MudText>
                        </MudPaper>
                        <MudStack Row="true" Style="height:100%; width:20%" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Edit" Color="Color.Warning" IconColor="Color.Dark" OnClick="@(() => EditFolder(folder))">Edit</MudButton>
                            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowForward" Color="Color.Error" IconColor="Color.Dark" OnClick="@(() => Navigate(folder.Id))">Go</MudButton>
                        </MudStack>
                    </MudStack>
                }
            </MudStack>
            <MudScrollToTop TopOffset="100"
                            Selector="#unique_id_scroll_section"
                            VisibleCssClass="visible absolute"
                            HiddenCssClass="invisible">
            </MudScrollToTop>
        </MudPaper>
    </div>
}
else
{
    <MudStack AlignItems="AlignItems.Center">
        <MudText Typo="Typo.body1">Looks like you don't have any folder</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@AddNewFolder">Create Folder</MudButton>
    </MudStack>
}



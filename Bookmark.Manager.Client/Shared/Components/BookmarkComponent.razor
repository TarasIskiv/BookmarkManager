@if (Bookmarks.Count() > 0)
{
    <MudStack Row="true" Justify="Justify.SpaceBetween" Style="width:100%">
        <MudText Typo="Typo.h5">Bookmarks</MudText>
        <div>
            <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@AddBookmark">Add Bookmark</MudButton>
        </div>
    </MudStack>
    <hr />
    <br />
    <div id="unique_id_scroll_section" class="ma-0" style="height:30vh;overflow: auto;">
        <MudPaper Outlined="false" Elevation="0" Style="background:transparent">
            <MudStack Style="height:100%; width:100%">
                @foreach (var bookmark in Bookmarks)
                {
                    <MudStack Style="width:100%;height:100%" Row="true" Justify="Justify.SpaceBetween">
                        <MudPaper Height="5vh" Width="100%" Style="@GetBookmarkStyle(bookmark)">
                            <MudText Color="Color.Info" Typo="Typo.h6">@bookmark.Name</MudText>
                        </MudPaper>
                        <MudStack Row="true" Style="height:100%; width:30%" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Edit" Color="Color.Warning" IconColor="Color.Dark" OnClick="@(() => UpdateBookmark(bookmark))">Edit</MudButton>
                            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowForward" Color="Color.Error" IconColor="Color.Dark" OnClick="@(() => DeleteBookmark(bookmark.Id))">Remove</MudButton>
                            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowForward" Color="Color.Success" IconColor="Color.Dark" OnClick="@(() => Navigate(bookmark.URL))">Go</MudButton>
                        </MudStack>
                    </MudStack>
                }
            </MudStack>
            <MudScrollToTop TopOffset="100"
                            Selector="#unique_id_scroll_section"
                            VisibleCssClass="visible absolute"
                            HiddenCssClass="invisible">
            </MudScrollToTop>
        </MudPaper>
    </div>
}
else
{
    <MudStack AlignItems="AlignItems.Center">
        <MudText Typo="Typo.body1">Looks like you don't have any bookmarks</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@AddBookmark">Add Bookmark</MudButton>
    </MudStack>
}
